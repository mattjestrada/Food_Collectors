<!--NAVBAR-->
<nav class="navbar navbar-light col align-items-end" style="background-color: #00C4C2;">
    <blockquote class="blockquote">
        <p class="mb-0"><em>“You have not lived today until you have done something for someone who can never repay you.”</em></p>
        <footer class="blockquote-footer text-white">John Bunyan</footer>
    </blockquote>
    <a class="btn btn-dark text-white btn-lg mb-2" href="/" role="button">Home</a>
</nav>
<!--Main-->
<div class="volunteer-container">
    {{!-- {{#each user}} --}}
      <h1 id="title" class="display-1 text-center text-white py-5">Welcome <span id="username"></span>!</h1>
    {{!-- {{/each}} --}}
    <!--CARD INFO FOR PICKUPS-->
    <div class="row" id="card">
      {{#each orders}}
        <div class="col-md-3 mb-4">
          <div class="card mx-3">
            <div class="card-body">
                <h4 class="card-title">{{this.name}}</h4>
                <p class="card-text">Quantity: {{this.quantity}} of {{this.name}}!</p>
                <p class="card-text"> It expires on <mark>{{this.expiration}}</mark>. 
                <p class="card-text">Let's go get it!</p>
                <p class="card-text"><small class="text-muted">Received: {{this.status}}</small></p>
            </div>

            <div class="btn-group mx-auto mb-2" role="group" aria-label="Basic example">
              <button class="btn btn-success food-delete" data-delete ={{this.id}}  type="submit">Picked Up</button>
              <button class="btn btn-warning food-delete data-delete='" data[i].id type="submit" >Delivered</button>
            </div>
            {{!-- Google Maps Div --}}
              <img class="card-img-bottom" src="http://images.indianexpress.com/2016/11/hazaribagh-759.jpg" alt="Card image cap">
          </div>
        </div>
      {{/each}}
    </div>

</div>

